{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,  
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "esModuleInterop": true,  
    "resolveJsonModule": true,  
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true                                                                 
  }
}
